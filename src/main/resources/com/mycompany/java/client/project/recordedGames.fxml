<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java.client.project.RecordedGamesController">
    
    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Button fx:id="backButton" onAction="#handleBack" styleClass="back-button" text="â† Back" />
        
        <Label text="Recorded Games" styleClass="page-title" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets left="450.0" />
            </HBox.margin>
        </Label>
    </HBox>
    
    <VBox styleClass="games-container" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="40.0">
        
        <ScrollPane fx:id="gamesScrollPane" fitToWidth="true" styleClass="games-scroll-pane" VBox.vgrow="ALWAYS">
            <VBox fx:id="gamesListContainer" spacing="20.0" styleClass="games-list">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                </padding>
                
                <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="15.0" visible="false" managed="false">
                    <padding>
                        <Insets top="100.0" bottom="100.0" />
                    </padding>
                    <Label text="No Recorded Games Yet" styleClass="empty-state-title" />
                    <Label text="Your game history will appear here once you complete some games." styleClass="empty-state-subtitle" wrapText="true" maxWidth="400.0" alignment="CENTER" />
                </VBox>
                
            </VBox>
        </ScrollPane>
        
    </VBox>
    
</AnchorPane>