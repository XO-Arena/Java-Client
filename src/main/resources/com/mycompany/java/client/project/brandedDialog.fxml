<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefWidth="400.0" styleClass="custom-dialog-root" stylesheets="@/styles/dialog.css" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java.client.project.BrandedDialogController">
   <children>
      <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="dialogIcon" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="titleLabel" styleClass="dialog-title" text="Title" />
            <Label fx:id="contentLabel" styleClass="dialog-content" text="Content..." wrapText="true" />
            <HBox fx:id="buttonBox" alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="secondaryButton" mnemonicParsing="false" styleClass="dialog-button-secondary" text="Cancel" />
                  <Button fx:id="primaryButton" mnemonicParsing="false" styleClass="dialog-button-primary" text="OK" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
