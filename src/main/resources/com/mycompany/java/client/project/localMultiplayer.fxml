<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mycompany.java.client.project.LocalMultiplayerController"
           styleClass="root" stylesheets="@/styles/local-multiplayer.css"
           prefHeight="600.0" prefWidth="900.0">
    
    <!-- Back Button (Top-Left) -->
    <Button fx:id="backButton" onAction="#handleBack" styleClass="back-button" text="← Back" 
            StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets top="20" left="20" />
        </StackPane.margin>
    </Button>
    
    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="50" maxWidth="600">
        <padding>
            <Insets top="20" bottom="40" left="40" right="40" />
        </padding>
        
        <!-- Title -->
        <Label text="Local Multiplayer" styleClass="title-label">
            <font>
                <Font name="System Bold" size="32" />
            </font>
        </Label>
        
        <!-- Players Container -->
        <HBox alignment="CENTER" spacing="60">
            
            <!-- Player 2 (Left Side - O) -->
            <VBox alignment="CENTER" spacing="20" styleClass="player-container">
                <Circle fx:id="player2Avatar" radius="60" styleClass="avatar-p2" 
                        stroke="#ff5e7e" strokeWidth="3" fill="#1e1e30" />
                
                <Label text="Player 2" styleClass="player-label" textFill="#ff5e7e">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
                
                <TextField fx:id="player2NameField" promptText="Enter name" 
                           styleClass="player-name-field" maxWidth="180" />
                
                <Label text="O" styleClass="symbol-label, o-symbol">
                    <font>
                        <Font name="System Bold" size="48" />
                    </font>
                </Label>
            </VBox>
            
            <!-- VS Separator -->
            <VBox alignment="CENTER" spacing="15">
                <Label text="vs" styleClass="vs-label">
                    <font>
                        <Font name="System Bold" size="28" />
                    </font>
                </Label>
                
                <!-- Swap Button -->
                <Button fx:id="swapButton" onAction="#handleSwap" styleClass="swap-button" 
                        text="⇄" maxWidth="60" maxHeight="60" minWidth="60" minHeight="60">
                    <font>
                        <Font size="24" />
                    </font>
                </Button>
            </VBox>
            
            <!-- Player 1 (Right Side - X) -->
            <VBox alignment="CENTER" spacing="20" styleClass="player-container">
                <Circle fx:id="player1Avatar" radius="60" styleClass="avatar-p1" 
                        stroke="#2e5bff" strokeWidth="3" fill="#1e1e30" />
                
                <Label text="Player 1" styleClass="player-label" textFill="#2e5bff">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
                
                <TextField fx:id="player1NameField" promptText="Enter name" 
                           styleClass="player-name-field" maxWidth="180" />
                
                <Label text="X" styleClass="symbol-label, x-symbol">
                    <font>
                        <Font name="System Bold" size="48" />
                    </font>
                </Label>
            </VBox>
            
        </HBox>
        
        <!-- Start Button -->
        <Button fx:id="startButton" onAction="#handleStart" text="Let's Go" 
                styleClass="start-button" maxWidth="300" minHeight="50">
            <font>
                <Font name="System Bold" size="18" />
            </font>
        </Button>
        
    </VBox>
    
</StackPane>