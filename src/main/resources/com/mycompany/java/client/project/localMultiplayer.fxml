<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@/styles/local-multiplayer.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java.client.project.LocalMultiplayerController">
    
    <!-- Back Button (Top-Left) -->
    <Button fx:id="backButton" onAction="#handleBack" styleClass="back-button" text="â† Back" StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets left="20" top="20" />
        </StackPane.margin>
    </Button>
    
    <!-- Main Content -->
    <VBox alignment="CENTER" maxWidth="600" spacing="50">
        <padding>
            <Insets bottom="40" left="40" right="40" top="20" />
        </padding>
        
        <!-- Title -->
        <Label styleClass="title-label" text="Local Multiplayer">
            
        </Label>
        
        <!-- Players Container -->
        <HBox alignment="CENTER" spacing="60">
            
            <!-- Player 2 (Left Side - O) -->
            <VBox alignment="CENTER" spacing="20" styleClass="player-container">
                <Circle fx:id="player2Avatar" fill="#1e1e30" radius="60" stroke="#ff5e7e" strokeWidth="3" styleClass="avatar-p2" />
                
                <Label styleClass="player-label" text="Player 2" textFill="#ff5e7e">
                   
                </Label>
                
                <TextField fx:id="player2NameField" maxWidth="180" promptText="Enter name" styleClass="player-name-field" />
                
                <Label styleClass="symbol-label, o-symbol" text="O">
                    
                </Label>
            </VBox>
            
            <!-- VS Separator -->
            <VBox alignment="CENTER" spacing="15">
                <Label alignment="CENTER" prefHeight="600.0" prefWidth="600.0" styleClass="vs-label" text="vs">

                </Label>
            </VBox>
            
            <!-- Player 1 (Right Side - X) -->
            <VBox alignment="CENTER" spacing="20" styleClass="player-container">
                <Circle fx:id="player1Avatar" fill="#1e1e30" radius="60" stroke="#2e5bff" strokeWidth="3" styleClass="avatar-p1" />
                
                <Label styleClass="player-label" text="Player 1" textFill="#2e5bff">

                </Label>
                
                <TextField fx:id="player1NameField" maxWidth="180" promptText="Enter name" styleClass="player-name-field" />
                
                <Label styleClass="symbol-label, x-symbol" text="X">

                </Label>
            </VBox>
            
        </HBox>
        
        <!-- Start Button -->
        <Button fx:id="startButton" maxWidth="300" minHeight="50" onAction="#handleStart" prefHeight="292.0" prefWidth="300.0" styleClass="start-button" text="Let's Go">
        </Button>
        
    </VBox>
    
</StackPane>
