<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="688.0" prefWidth="974.0" stylesheets="@/styles/register-page.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java.client.project.RegisterPageController">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="420.0" maxWidth="390.0" prefHeight="420.0" prefWidth="390.0" spacing="15.0" styleClass="register-container">
            <children>
                <Label alignment="CENTER" prefHeight="35.0" prefWidth="268.0" styleClass="register-title" text="Register" />

                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="form-section">
                    <children>
                        <Label graphicTextGap="8.0" styleClass="field-label" text="Username" />
                        <TextField fx:id="usernameField" prefHeight="37.0" prefWidth="358.0" styleClass="text-field" />
                    </children>
                    <VBox.margin>
                        <Insets left="18.0" right="18.0" />
                    </VBox.margin>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="form-section">
                    <children>
                        <Label styleClass="field-label" text="Password" />
                        <PasswordField fx:id="passwordField" prefHeight="36.0" prefWidth="358.0" styleClass="password-field" />
                    </children>
                    <VBox.margin>
                        <Insets left="18.0" right="18.0" />
                    </VBox.margin>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="5.0" styleClass="gender-container">
                    <children>
                        <Label prefHeight="18.0" prefWidth="272.0" styleClass="field-label" text="Gender" />
                        <ComboBox fx:id="genderComboBox" prefHeight="36.0" prefWidth="110.0" promptText="Select Gender" styleClass="combo-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Male" />
                                    <String fx:value="Female" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets left="18.0" right="18.0" />
                    </VBox.margin>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </HBox>

                <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="43.0" prefWidth="208.0" styleClass="register-button" text="Register" />

                <HBox alignment="CENTER" spacing="10.0" />

                <Button fx:id="backToLoginButton" onAction="#navigateToLogin" prefHeight="51.0" prefWidth="207.0" styleClass="secondary-button" text="Back to Login" />
            </children>

            <padding>
                <Insets bottom="20.0" left="0" right="0" top="20.0" />
            </padding>
        </VBox>

        <!-- Back to Home Button - Top Left of Screen -->
        <Button fx:id="backToHomeButton" onAction="#navigateToLogin" styleClass="back-button" text="â† Back" StackPane.alignment="TOP_LEFT">
            <StackPane.margin>
                <Insets left="20.0" top="20.0" />
            </StackPane.margin>
        </Button>
    </children>
</StackPane>
