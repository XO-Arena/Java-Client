<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="688.0" prefWidth="974.0" stylesheets="@/styles/login-page.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.java.client.project.LoginPageController">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="382.0" maxWidth="390.0" prefHeight="382.0" prefWidth="390.0" spacing="15.0" styleClass="login-container">
            <children>
                <Label alignment="CENTER" prefHeight="35.0" prefWidth="326.0" styleClass="login-title" text="Login" />

                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="form-section">
                    <children>
                        <Label graphicTextGap="8.0" styleClass="field-label" text="Username" />
                        <TextField fx:id="usernameField" prefHeight="37.0" prefWidth="358.0" styleClass="text-field" />
                    </children>
                    <VBox.margin>
                        <Insets left="18.0" right="18.0" />
                    </VBox.margin>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="form-section">
                    <children>
                        <Label styleClass="field-label" text="Password" />
                        <PasswordField fx:id="passwordField" prefHeight="36.0" prefWidth="358.0" styleClass="password-field" />
                    </children>
                    <VBox.margin>
                        <Insets left="18.0" right="18.0" />
                    </VBox.margin>
                </VBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </HBox>

                <Button fx:id="loginButton" prefHeight="33.0" prefWidth="94.0" styleClass="login-button" text="Login" />

                <HBox alignment="CENTER" spacing="10.0" />

                <Button fx:id="createAccountButton" onAction="#navigateToRegister" prefHeight="38.0" prefWidth="150.0" styleClass="secondary-button" text="Create an account" />
            </children>

            <padding>
                <Insets bottom="20.0" left="0" right="0" top="20.0" />
            </padding>
        </VBox>
    </children>
</StackPane>
